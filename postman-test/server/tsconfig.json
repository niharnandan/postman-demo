{
    "compilerOptions": {
      "target": "ES2022",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "outDir": "./dist",
      "rootDir": "./src",
      
      /* JavaScript Support */
      "allowJs": true,        // Allow JavaScript files to be compiled
      "checkJs": false,       // Optional: Enable type checking in JS files with JSDoc
      
      /* Other settings */
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "sourceMap": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }